<Window x:Class="BullsAndCows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BullsAndCows"
        mc:Ignorable="d"
        Title="BullAndCows" Height="150" Width="150">
    <Grid Background="#FFF0F0F0">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Button x:Name="ButtonStart" Grid.Row="0" Height="25" Margin="5" Click="ButtonStart_Click">Играть</Button>
        <Button x:Name="ButtonAbout" Grid.Row="1" Height="25" Margin="5" Click="ButtonAbout_Click">О программе</Button>
        <Button x:Name="ButtonExit" Grid.Row="2" Height="25" Margin="5" Click="ButtonExit_Click">О программе</Button>

    </Grid>
</Window>
